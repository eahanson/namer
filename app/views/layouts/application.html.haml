!!!
%html
  %head
    %title Namer

    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag    '//netdna.bootstrapcdn.com/bootstrap/3.0.0-rc1/css/bootstrap.min.css'

    = javascript_include_tag "application", "data-turbolinks-track" => true
    = javascript_include_tag '//netdna.bootstrapcdn.com/bootstrap/3.0.0-rc1/js/bootstrap.min.js'

    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    = csrf_meta_tags

  %body
    .container{style: 'margin-top: 50px; padding-right: 50px; padding-left: 50px'}
      = yield
